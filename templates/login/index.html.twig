{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row col-12">
        <div class="col-4"></div>

        <form class="loginform row col-4" style="margin-top:2.5%" action="{{ path('login') }}" method="post">

            <div class="col-3"></div>
            <div class="row col-6">   
                <h3 class="col-12" style="color:white; font-size:xx-large"><span id="bee" class="material-icons-outlined" style="color:white">hive</span>Sign In</h3>
            </div>
            <div class="col-3"></div>

            <div class="col-1"></div>
            <div class="row col-10" >
                <label for="username" class="col-12" style="margin-top:10%">Username</label>
                <input class="col-12" type="text" id="username" name="_username" value="{{ last_username }}"/>

                <label for="password" class="col-12" style="margin-top:10%">Password</label>
                <input type="password" class="col-12" id="password" name="_password"/>

                <input type="hidden" name="_target_path" value="/posts">
                <div class="col-4"></div>
                <button id="button" class="col-4 row" style="color:#fdec2e; margin-top:15%" type="submit">
                    <span class="material-icons-outlined col-4" style="color:#fdec2e; font-size:xx-large;">hexagon</span>
                    <div class="col-8">Login</div>
                </button>
                <div class="col-4"></div>
            </div>
            <div class="col-1"></div>
        </form>

        <div class="col-4"></div>
    </div>
{% endblock %}